<h3>Instruments</h3>
<div class="row">
  <% @products.each do |prod| %>
    <% if prod.quantity > 0 %>
      <div class="col s6 m3 l2" id="prod-<%= prod.title %>">
        <div class="card medium">
          <div class="index-card-image card-image">
            <%= image_tag "data:image/jpeg;base64,#{prod.image}"%>
          </div>
          <div class="card-content">
            <p><%= prod.title %></p>
            <p><%= prod.description %></p>
          </div>
          <div class="card-action">
            <%= link_to  "Details", product_path(prod) %>
            <%= prod.price %>  â‚¬
          </div>
        </div>
      </div>
    <% end %>
  <% end %> 
</div>