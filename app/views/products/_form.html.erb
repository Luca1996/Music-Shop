<div class="row">
    <%= form_for @product ,:class => "col s12" do |f| %>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :title , :class => "active" %>
            <%= f.text_field :title %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
            <%= f.label :brand , :class => "active" %>
            <%= f.text_field :brand %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :model , :class => "active" %>
            <%= f.text_field :model %>
        </div>
      </div>
      <div class="file-field input-field col s12 m8">
        <div class="btn">
          <span>File</span>
            <%= f.file_field :image %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :price , :class => "active" %>
            <%= f.number_field :price , :step => "0.01" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :quantity , :class => "active" %>
            <%= f.number_field :quantity %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :weight , :class => "active" %>
            <%= f.number_field :weight %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :height , :class => "active" %>
            <%= f.number_field :height %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :length , :class => "active" %>
            <%= f.number_field :length %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
            <%= f.label :depth , :class => "active" %>
            <%= f.number_field :depth %>
        </div>
      </div> 
      <div class="input-field col s12">
            <%= f.label :description , :class => "active" %>
            <%= f.text_area :description, :class => "materialize-textarea" %>
      </div>
      <div class="row">
        <div class="input-field col s12">
            <%= f.submit "Add Product", :class => "btn waves-effect waves-light" %>
        </div>
    </div>
    <% end %>
  </div>